<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.softwareit.audiomanagerapp.MainActivity">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="463dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Manager App"
            android:layout_gravity="center"
            android:textSize="36sp"
            android:id="@+id/txtAppName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="137dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/txtAppName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="65dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODE"
                android:id="@+id/btnMode"
                android:onClick="mode"/>

            <Button
                android:id="@+id/btnRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RING"
                android:onClick="ring"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIBRATE"
                android:id="@+id/btnVibrate"
                android:onClick="vibrate"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SILENT"
                android:id="@+id/btnSilent"
                android:onClick="silent"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
